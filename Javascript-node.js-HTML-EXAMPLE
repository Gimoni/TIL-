        <h1>Carousel</h1>
        <!-- 회전목마 -->

        <style>
            .container {
                width: 200px;
                height: 200px;
                background-color: #ddd;
                display: flex;
                overflow: hidden;
            }
            .item {
                width: inherit;
                height: inherit;
                flex-shrink: 0;
                transition: 0.2s;
                display: flex;
                justify-content: center;
                align-items: center;
            }
            .hidden {
                display: none;
            }
        </style>

        <div class="container">
            <div class="item">1</div>
            <div class="item">2</div>
            <div class="item">3</div>
        </div>

        <button id="prev" onclick="f(-1)" class="hidden">&#10094;</button>
        <button id="next" onclick="f(1)">&#10095;</button>

        <script>
            const next = document.getElementById("next");
            const items = document.querySelectorAll(".item");

            let index = 0;

            function f(x) {
                //index 값 구하기
                index += x;
                console.log(index);
                
                // # 이미지 이동하기
                items[0].style.marginLeft = `-${index * 200}px`;

                // # Button 컨트롤

                // Button를 초기화한다 (Button을 보이게 만든다.)
                prev.classList.remove("hidden");
                next.classList.remove("hidden");

                if (index===0) { // 첫번째 이미지일 때 prev버튼을 사라지게 만든다.
                    prev.classList.add("hidden");
                }

                if (index === items.length-1) { // 마지막 이미지일 때 next버튼을 사라지게 한다. 
                    next.classList.add("hidden");
                }
            }
        </script>

</body>
